.receive {
  margin-top: 50rpx;
}

/* 优惠券 */
.receiveUp {
  width: 710rpx;
  height: 242rpx;
  margin-left: 20rpx;
}

.bigbox {
  display: flex;
  border-bottom: 1px dashed #e8baba;
}

.receiveUpleft {
  width: 242rpx;
  height: 172rpx;
  text-align: center;
  padding-top: 10rpx;
  border-right: 1px dashed #e8baba;
  color: #626262;
  font-size: 24rpx;
  box-sizing: border-box;
}

.receiveUpRight {
  width: 468rpx;
  height: 172rpx;
  padding-top: 44rpx;
  padding-left: 12rpx;
  box-sizing: border-box;
}

.receiveUpRight .text1 {
  font-size: 26rpx;
  color: #444444;
  margin-bottom: 24rpx;
}

.receiveUpRight .text1 .textbox {
  display: inline-block;
  width: 88rpx;
  height: 30rpx;
  background-color: rgba(246, 57, 13, 100);
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  margin-right: 10rpx;
}

.receiveUpRight .text2 {
  font-size: 24rpx;
  color: #9d9d9d;
}

.receiveUpRight .text2 text:nth-child(1) {
  color: #F6390D;
}

.receiveUpRight .text2 text:nth-child(2) {
  display: inline-block;
  width: 128rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  background-color: #F6390D;
  border-radius: 34rpx;
  color: #fff;
}

.smallbox {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #444444;
}

.smallbox text {
  margin-top: 10rpx;
  margin-left: 56rpx;
}

.smallbox image {
  width: 36rpx;
  height: 36rpx;
  margin-top: 10rpx;
  margin-right: 18rpx;
}

/* 使用须知 */
.receiveUnder {
  width: 650rpx;
  height: 970rpx;
  margin-left: 52rpx;
  margin-top: 38rpx;
}

.receiveUnder .text {
  color: #101010;
  font-size: 40rpx;
  margin-bottom: 28rpx;
}

.receiveUnder .textbox {
  width: 650rpx;
  height: 890rpx;
  font-size: 28rpx;
}

.receiveUnder .textbox .text1 {
  margin-bottom: 76rpx;
}

.receiveUnder .textbox .text1 view {
  margin-bottom: 10rpx;
}
