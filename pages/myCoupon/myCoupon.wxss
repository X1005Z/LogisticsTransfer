
.box {
  margin-top: 40rpx;
}

.coupon {
  width: 700rpx;
  height: 200rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
}

.couponLeft {
  position: relative;
}

.couponLeft .text {
  position: absolute;
  bottom: 30rpx;
  left: 45rpx;
}

.couponLeft image {
  width: 268rpx;
  height: 200rpx;
}

.couponRight {
  position: relative;
  width: 404rpx;
  height: 200rpx;
}

.couponRight .righttext {
  color: #5A5A5A;
  font-size: 36rpx;
  margin-top: 44rpx;
  margin-bottom: 22rpx;
  font-weight: 700;
}

.couponRight .righttext1 {
  color: #BFBFBF;
  font-size: 28rpx;
}

.couponRight .image1 {
