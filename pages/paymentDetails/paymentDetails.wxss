.payment {
  margin-top: 18rpx;
}

/* 收货人地址 */
.warehouse {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 694rpx;
  height: 200rpx;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.4);
  margin-left: 30rpx;
  margin-bottom: 28rpx;
}

.warehouseImage {
  width: 52rpx;
  height: 52rpx;
  padding-top: 6rpx;
  box-sizing: border-box;
  text-align: center;
  border-radius: 50%;
  background-color: #FFA726;
  margin-left: 28rpx;
}

.warehouseImage image {
  width: 40rpx;
  height: 40rpx;
}

.warehouseText {
  width: 566rpx;
  margin-right: 20rpx;
}

.warehouseText1 {
  font-size: 30rpx;
}

/* 具体金额 */
.parmentMoney {
  width: 694rpx;
  height: 716rpx;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.4);
  margin-left: 30rpx;
  margin-bottom: 28rpx;
}

.parmentMoney .parmentMoneyText {
  display: flex;
  justify-content: space-between;
  padding-top: 24rpx;
  font-size: 28rpx;
}

.parmentMoney .parmentMoneyText .parmentMoneyText1 {
  margin-left: 30rpx;
}

.parmentMoney .parmentMoneyText .parmentMoneyText2 {
  margin-right: 14rpx;
}

.coupon1 {
  display: flex;
}

.coupon2 {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

/* 横线 */
.line {
  width: 658rpx;
  border-bottom: 2rpx solid #BBBBBB;
  margin-top: 22rpx;
  margin-left: 20rpx;
}

/* 优惠金额 */
.money {
  font-size: 28rpx;
  color: #686868;
  text-align: right;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

/* 同意条款-支付按钮 */
.parmentUnder {
  display: flex;
  width: 750rpx;
  height: 132rpx;
  margin-top: 366rpx;
  font-size: 28rpx;
}

/* 同意条款 */
.parmentUnder .agreement {
  width: 496rpx;
  height: 132rpx;
  border: 2rpx solid #E2E2E2;
  padding-left: 28rpx;
  padding-top: 14rpx;
  box-sizing: border-box;
}

/* checkbox设置成圆形 */
.checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 24rpx;
  height: 24rpx;
}

/* 选中的背景颜色 */
.checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #ffc29c;
  border: 1px solid #e7691d;
}

/* 打钩的样式 */
.checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 40rpx;
  /* 选中后对勾大小 */
  height: 40rpx;
  /* 选中后对勾大小 */
  font-size: 38rpx;
  color: #e7691d;
  /* 对勾颜色 白色 */
}

/* 支付按钮 */
.parmentUnder .btn {
  width: 254rpx;
  height: 132rpx;
  line-height: 132rpx;
  background-color: #274F05;
  color: #F5E4AD;
  text-align: center;
  font-size: 36rpx;
  border-radius: 0rpx;
}

/* 弹出层 */
.modal-dialog {
  width: 750rpx;
  height: 988rpx;
  overflow: hidden;
  position: fixed;
  bottom: 314rpx;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 0rpx;
  border-radius: 16rpx;
}

.modal-content {
  width: 750rpx;
  height: 854rpx;
  color: #888888;
  padding: 12rpx;
  box-sizing: border-box;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.margin-bottom {
  margin-bottom: 56rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 446rpx;
  height: 90rpx;
  color: #fff;
  text-align: center;
  background-color: #E7691D;
  border-radius: 94rpx;
  margin-top: 22rpx;
  margin-left: 152rpx;
}