    position: relative;
    width: 660rpx;
    height: 80rpx;
    margin-top: 94rpx;
    margin-left: 46rpx;
    background-color: #2ca7e6;
    border-radius: 38rpx;
    line-height: 80rpx;
}

.warehouseAddress image {
    width: 34rpx;
    height: 34rpx;
    margin-left: 144rpx;
    margin-top: 26rpx;
}

.warehouseAddress text {
    color: #FFFFFF;
    margin-left: 20rpx;
    position: absolute;
    top: 0rpx;
    left: 180rpx;
}

.warehouseAddress1 {
    text-align: center;
    margin-top: 12rpx;
    font-size: 28rpx;
    color: #2ca7e6;
    padding-bottom: 50px;
}