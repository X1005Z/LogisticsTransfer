/* search的样式 */
.wx-switch-input {
  width: 100rpx !important;
  height: 60rpx !important;
  margin: 0 !important;
  padding: 0 !important;
} 

/*白色样式（false的样式）*/
.wx-switch-input::before {
  width: 95rpx !important;
  height: 56rpx !important;
}

/*绿色样式（true的样式）*/
.wx-switch-input::after {
  width: 61rpx !important;
  height: 56rpx !important;
}

